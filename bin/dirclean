#!/usr/bin/env ruby
# frozen_string_literal: true
require 'dirclean'

def show_help
  puts 'Removes files and folders that were not accessed for over 30 days'
  puts 'usage: dirclean directory_path ...'
end

if ARGV.empty?
  show_help
  exit
end

cleaner = DirClean::Cleaner.new

ARGV.each { |dir_path| cleaner.clean(dir_path) }
